<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/Black"
    android:gravity="center"
    android:paddingTop="@dimen/paddingPaginas"
    android:paddingBottom="@dimen/paddingPaginas"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewRegion"
        android:layout_width="@dimen/tamanioBanderas"
        android:layout_height="@dimen/tamanioBanderas"
        android:contentDescription="@string/cdRegionMenu"
        android:scaleType="centerInside"
        android:layout_marginEnd="@dimen/marginBanderas"
        />

    <TextView
        android:id="@+id/textoRegion"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/White"
        android:textStyle="bold"
        />
</LinearLayout>